        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="379" Margin="360,300,0,-654" Stroke="Black" VerticalAlignment="Top" Width="352" RenderTransformOrigin="0.361,0.493"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="379" Margin="717,300,0,-659" Stroke="Black" VerticalAlignment="Top" Width="345" RenderTransformOrigin="0.361,0.493"/>
        <Label Content="Player Information" HorizontalAlignment="Center" Margin="832,300,132,-154" VerticalAlignment="Top" Width="108"/>
        <Label Content="Name: Player" HorizontalAlignment="Left" Margin="717,331,0,-195" VerticalAlignment="Top" Width="90"/>
        <Label Content="Gold: 0" HorizontalAlignment="Left" Margin="717,357,0,-221" VerticalAlignment="Top" Width="90"/>
        <Label Content="Level: 1" HorizontalAlignment="Left" Margin="717,383,0,-247" VerticalAlignment="Top" Width="90"/>
        <Label Content="EXP: 0/256" HorizontalAlignment="Left" Margin="717,409,0,-273" VerticalAlignment="Top" Width="90"/>
