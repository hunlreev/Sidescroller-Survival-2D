        <Label Content="Health: 100/100" HorizontalAlignment="Left" Margin="954,357,0,-221" VerticalAlignment="Top" Width="108" RenderTransformOrigin="0.856,0.577"/>
        <Label Content="Mana: 100/100" HorizontalAlignment="Left" Margin="954,383,0,-247" VerticalAlignment="Top" Width="108" RenderTransformOrigin="0.856,0.577"/>
        <Label Content="Stamina: 100/100" HorizontalAlignment="Left" Margin="954,409,0,-273" VerticalAlignment="Top" Width="108" RenderTransformOrigin="0.856,0.577"/>
    </Grid>
</Window>
